{var
  nome:string;

begin
  Nome:=edtNome.text;

   if cbNomes.ItemIndex=0 then
     Begin
       Nome:=UpperCase ( Nome );
       ShowMessage (Nome);

     End
   else
      if cbNomes.ItemIndex=1 then
        Begin
           Nome[1]:=LowerCase ( Nome [1]);
           ShowMessage (Nome);

        end
      else
         Begin //transformar a primeira letra - Ex 1 da apostila
            Nome[1]:=LowerCase ( Nome );
            Nome[1]:=UpperCase ( Nome [1]);
            ShowMessage (Nome);

         End;